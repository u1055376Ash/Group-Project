<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.groupproject.workbench.perspectives.ObjectBenchPerspective"
            fixed="true"
            id="com.groupproject.workbench.perspectives.objectbench"
            name="Object Bench Toolkit">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.groupproject.workbench.views.ObjectBenchView"
            id="com.groupproject.workbench.views.objectbench"
            name="Object Bench"
            restorable="true">
      </view>
      <view
            class="com.groupproject.workbench.views.ClassDiagramView"
            id="com.groupproject.workbench.views.classdiagram"
            name="Class Diagram"
            restorable="true">
      </view>
      <view
            class="com.groupproject.workbench.views.InspectorView"
            id="com.groupproject.workbench.views.inspector"
            name="Inspector"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.groupproject.workbench.preferences.OBPreferences"
            id="com.groupproject.workbench.preferences.OBPreferences"
            name="Object Bench Tool Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.groupproject.workbench.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.groupproject.workbench.commands.category"
            name="Class Tools">
      </category>
      <command
            categoryId="com.groupproject.workbench.commands.category"
            defaultHandler="com.groupproject.workbench.commands.sampleCommand"
            id="com.groupproject.workbench.commands.iterateClasses"
            name="Iterate Project Classes">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.groupproject.workbench.handlers.SampleHandler"
            commandId="com.groupproject.workbench.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.groupproject.workbench.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.groupproject.workbench.menus.sampleMenu"
               label="Class Tools"
               mnemonic="M">
            <command
                  commandId="com.groupproject.workbench.commands.sampleCommand"
                  id="com.groupproject.workbench.menus.sampleCommand"
                  label="Iterate Project Classes"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.groupproject.workbench.toolbars.sampleToolbar">
            <command
                  commandId="com.groupproject.workbench.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="com.groupproject.workbench.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.groupproject.workbench.perspectives.objectbench">
      </perspectiveExtension>
   </extension>

</plugin>
